From: Jan Luebbe <jlu@pengutronix.de>
Date: Fri, 30 Jul 2021 23:12:40 +0200
Subject: [PATCH] lxatac: add gpio key

Signed-off-by: Jan Luebbe <jlu@pengutronix.de>
---
 arch/arm/boot/dts/stm32mp157c-lxa-tac.dts | 11 +++++++++++
 1 file changed, 11 insertions(+)

diff --git a/arch/arm/boot/dts/stm32mp157c-lxa-tac.dts b/arch/arm/boot/dts/stm32mp157c-lxa-tac.dts
index f011af92b41b..d6dfca33b67f 100644
--- a/arch/arm/boot/dts/stm32mp157c-lxa-tac.dts
+++ b/arch/arm/boot/dts/stm32mp157c-lxa-tac.dts
@@ -11,6 +11,7 @@
 #include "stm32mp15xxac-pinctrl.dtsi"
 
 #include <dt-bindings/gpio/gpio.h>
+#include <dt-bindings/input/input.h>
 #include <dt-bindings/pwm/pwm.h>
 
 / {
@@ -44,6 +45,16 @@ led-1 {
 		};
 	};
 
+	gpio-keys {
+		compatible = "gpio-keys";
+
+		user-button {
+			label = "USER_BTN";
+			linux,code = <KEY_HOME>;
+			gpios = <&gpioi 11 GPIO_ACTIVE_LOW>;
+		};
+	};
+
 	reg_3v3: regulator_3v3 {
 		compatible = "regulator-fixed";
 		regulator-name = "3V3";
