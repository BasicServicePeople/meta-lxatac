From: Holger Assmann <h.assmann@pengutronix.de>
Date: Fri, 16 Jul 2021 08:54:35 +0200
Subject: [PATCH] DT: indentation: fix whitespaces

Signed-off-by: Holger Assmann <h.assmann@pengutronix.de>
---
 arch/arm/boot/dts/stm32mp157c-lxa-tac.dts | 16 ++++++++--------
 1 file changed, 8 insertions(+), 8 deletions(-)

diff --git a/arch/arm/boot/dts/stm32mp157c-lxa-tac.dts b/arch/arm/boot/dts/stm32mp157c-lxa-tac.dts
index 6e7280a90e15..a23069339be5 100644
--- a/arch/arm/boot/dts/stm32mp157c-lxa-tac.dts
+++ b/arch/arm/boot/dts/stm32mp157c-lxa-tac.dts
@@ -73,10 +73,10 @@ reg_1v2: regulator_1v2 {
 
 /* VREFBUF: What about the external reference voltage? */
 &vrefbuf {
-        regulator-min-microvolt = <2500000>;
-        regulator-max-microvolt = <2500000>;
-        vdda-supply = <&vdda>;
-        status = "okay";
+	regulator-min-microvolt = <2500000>;
+	regulator-max-microvolt = <2500000>;
+	vdda-supply = <&vdda>;
+	status = "okay";
 };
 
 &adc {
@@ -129,7 +129,7 @@ &gpioi {
 };
 
 &gpu {
-       status = "disabled";
+	status = "disabled";
 };
 
 &pmic {
@@ -138,7 +138,7 @@ regulators {
 		ldo2-supply = <&reg_5v>;	/* PMIC_LDO25IN */
 		ldo5-supply = <&reg_5v>;	/* PMIC_LDO25IN */
 		boost-supply = <&reg_5v>;	/* PMIC_BSTIN */
-		pwr_sw2-supply = <&bst_out>;    /* PMIC_SWIN */
+		pwr_sw2-supply = <&bst_out>;	/* PMIC_SWIN */
 	};
 };
 
@@ -188,14 +188,14 @@ &i2c1 {
 	pinctrl-1 = <&i2c1_sleep_pins_b>;
 	status = "okay";
 
-        gpio@48 {
+	gpio@48 {
 		compatible = "nxp,pca9570";
 		reg = <0x24>;
 		gpio-controller;
 		#gpio-cells = <2>;
 		gpio-line-names = "IO0", "IO1", "IO2", "IO3";
 		status = "okay";
-        };
+	};
 
 	eeprom@50 {
 		compatible = "atmel,24c02";
